<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_sale_layouted" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@id='informations'][1]" position="replace">
                <div t-if="o.date_order" class="col-xs-3">
                    <div t-if="doc.client_order_ref" class="col-xs-3">
                        <strong>Your Reference:</strong>
                        <p t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-xs-3">
                        <strong>Salesperson:</strong>
                        <p t-field="doc.user_id"/>
                    </div>
                    <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                    <strong t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                    <br/>
                    <span t-field="o.date_order"/>
                    <span>-</span>
                    <span t-field="o.end_date"/>
                    <br/>
                    <p/> 
                    <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                        <strong>Payment Terms:</strong>
                        <p t-field="doc.payment_term_id"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='page']/t/table" position="replace">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Adults</th>
                            <th>Children</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th class="text-right">Price</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <tr t-foreach="o.order_line" t-as="l">
                            <td>
                                <span t-field="l.product_id.categ_id.name"/>
                            </td>
                            <td>
                                <span t-field="l.name"/>
                            </td>
                            <td>
                                <span t-field="l.start_date"/>
                            </td>
                            <td>
                                <span t-field="l.end_date"/>
                            </td>
                            <td>
                                <span t-esc="l.adults or 0"/>
                            </td>
                            <td>
                                <span t-esc="l.children or 0"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.product_uom_qty"/>
                                <span groups="product.group_uom" t-field="l.product_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td groups="sale.group_discount_per_so_line">
                                <span t-field="l.discount"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal"
                                      t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </xpath>
        </template>
    </data>
</odoo>
